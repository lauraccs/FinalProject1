<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_closet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.laura.finalproject1.ClosetActivity">


    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_width="150dp"
        android:layout_height="105dp"
        android:orientation="horizontal"
        android:background="@color/black"
        android:layout_alignParentTop="true">

        <android.support.v4.view.ViewPager
            android:id="@+id/closet_viewpager_hats"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v4.view.ViewPager>

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="150dp"
        android:layout_alignParentRight="true"
        android:layout_width="150dp"
        android:layout_height="110dp"
        android:orientation="horizontal"
        android:background="@color/black"
        android:layout_alignParentTop="true">

        <android.support.v4.view.ViewPager
            android:id="@+id/closet_viewpager_tops"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v4.view.ViewPager>

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="310dp"
        android:layout_alignParentRight="true"
        android:layout_width="150dp"
        android:layout_height="110dp"
        android:orientation="horizontal"
        android:background="@color/black"
        android:layout_alignParentTop="true">

        <android.support.v4.view.ViewPager
            android:id="@+id/closet_viewpager_bottoms"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v4.view.ViewPager>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="340dp"
        android:layout_alignParentRight="true"
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:background="@color/black"
        android:layout_alignParentBottom="true">

        <android.support.v4.view.ViewPager
            android:id="@+id/closet_viewpager_shoes"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v4.view.ViewPager>

    </LinearLayout>

</RelativeLayout>
